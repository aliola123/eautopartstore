<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Products by <%= user.firstname %> <%= user.lastname %></title>

    <link rel="stylesheet" href="/css_folder/user-products.css">
    <link rel="icon" href="/icon_images/Logo_2 - Copy.png" type="image/x-icon" sizes="32x32" >
    <link rel="stylesheet" href="/css_folder/partial_styles/basics.css">

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <style>
        .user-info {
            text-align: center;
            margin-bottom: 20px;
        }
        .no-products {
            text-align: center;
            margin-top: 50px;
        }
    </style>
</head>
<body>
    <header>
        <!-- Your existing header code here -->
    </header>

    <main>
        <div class="user-info">
            <h1 id="user-products-title"><%= user.bizname || user.firstname + "'s Shop" %></h1>
            <p>Seller: <%= user.firstname %> <%= user.lastname %></p>
            <% if (user.location) { %>
                <p>Location: <%= user.location %></p>
            <% } %>
        </div>

        <% if (products.length > 0) { %>
            <div class="userProducts">
                <% products.forEach(product => { %>
                    <a href="/product/<%= product.productId %>" class="pd_cd">
                        <div class="product-card">
                            <img src="<%= product.photos[0] ? product.photos[0] : '/default-image.jpg' %>" alt="<%= product.name %>">
                            <article>
                                <p><%= product.name %></p>
                                <p class="price">
                                    <span class="priceDiv">â‚¦<%= formatNumber(product.price) %></span>
                                </p>
                            </article>
                        </div>
                    </a>
                <% }) %>
            </div>
        <% } else { %>
            <div class="no-products">
                <p>This seller hasn't posted any products yet.</p>
            </div>
        <% } %>
    </main>
    
    
</body>
</html>