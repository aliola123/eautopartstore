      <main>

          <div class="container">
            <form action="/sell-product" method="post" id="uploadForm" enctype="multipart/form-data">
              <h2>Upload Product</h2>

              <div id="cat-con">
                <legend class="levit">Category</legend>
                <select id="category" name="category" required style="height: 10vh;">
                    <option value="Select category" disabled selected>Select a category</option>
                    <option value="engine" <%= product && product.category === 'engine' ? 'selected' : '' %>>Engine Parts</option>
                    <option value="electrical" <%= product && product.category === 'electrical' ? 'selected' : '' %>>Electrical Parts</option>
                    <option value="body" <%= product && product.category === 'body' ? 'selected' : '' %>>Body Parts</option>
                    <option value="suspension" <%= product && product.category === 'suspension' ? 'selected' : '' %>>Suspension and Steering</option>
                    <option value="braking" <%= product && product.category === 'braking' ? 'selected' : '' %>>Braking System</option>
                    <option value="transmission" <%= product && product.category === 'transmission' ? 'selected' : '' %>>Transmission and Drivetrain</option>
                    <option value="exhaust" <%= product && product.category === 'exhaust' ? 'selected' : '' %>>Exhaust System</option>
                    <option value="fuel" <%= product && product.category === 'fuel' ? 'selected' : '' %>>Fuel System</option>
                    <option value="cooling" <%= product && product.category === 'cooling' ? 'selected' : '' %>>Cooling System</option>
                    <option value="climate" <%= product && product.category === 'climate' ? 'selected' : '' %>>Climate Control (HVAC)</option>
                    <option value="interior" <%= product && product.category === 'interior' ? 'selected' : '' %>>Interior Parts</option> 
                    <option value="lighting" <%= product && product.category === 'lighting' ? 'selected' : '' %>>Lighting</option>
                    <option value="tires" <%= product && product.category === 'tires' ? 'selected' : '' %>>Tires and Wheels</option>
                    <option value="fluids" <%= product && product.category === 'fluids' ? 'selected' : '' %>>Fluids and Lubricants</option>
                    <option value="performance" <%= product && product.category === 'performance' ? 'selected' : '' %>>Performance Parts</option>
                    <option value="accessories" <%= product && product.category === 'accessories' ? 'selected' : '' %>>Accessories and Add-ons</option>
                    <option value="tools" <%= product && product.category === 'tools' ? 'selected' : '' %>>Tools and Equipment</option>
                </select>
            </div>

            <div id="typ-con">
              <legend class="levit">Type</legend>
                <select name="type" id="type" data-pre-fill="<%= product ? product.type : '' %>" required>
                  <option value="select type" disabled selected>Select a type</option>
                </select>
            </div>

              <fieldset>
                <legend>Brand</legend>
                <select id="brand" name="brand" onchange="updateModels()">
                  <option disabled selected value="Select your brand" class="style">Select your brand</option>
                  <option value="Audi" <%= product && product.brand === 'Audi' ? 'selected' : '' %>>Audi</option>
                  <option value="Chevrolet" <%= product && product.brand === 'Chevrolet' ? 'selected' : '' %>>Chevrolet</option>
                  <option value="Ford" <%= product && product.brand === 'Ford' ? 'selected' : '' %>>Ford</option>
                  <option value="Honda" <%= product && product.brand === 'Honda' ? 'selected' : '' %>>Honda</option>
                  <option value="Lexus" <%= product && product.brand === 'Lexus' ? 'selected' : '' %>>Lexus</option>
                  <option value="Mercedes Benz" <%= product && product.brand === 'Bercedes Benz' ? 'selected' : '' %>>Mercedes Benz</option>
                  <option value="Nissan" <%= product && product.brand === 'Nissan' ? 'selected' : '' %>>Nissan</option>
                  <option value="Peugeot" <%= product && product.brand === 'Peugeot' ? 'selected' : '' %>>Peugeot</option>
                  <option value="Suzuki" <%= product && product.brand === 'Suzuki' ? 'selected' : '' %>>Suzuki</option>
                  <option value="Toyota" <%= product && product.brand === 'Toyota' ? 'selected' : '' %>>Toyota</option>
                  <option value="Volkswagen" <%= product && product.brand === 'Volkswagen' ? 'selected' : '' %>>Volkswagen</option>
                </select>
              </fieldset>

              <fieldset>
                <legend>Model</legend>
                <select id="model" name="model" data-pre-fill="<%= product ? product.model : '' %>">
                  <option disabled selected value="Model" class="style">Model</option>
                  <!-- other options would be dynamically selected using JS -->
                </select>
              </fieldset>


              
              
              <fieldset id="stuff">
                <legend>Year</legend>
                <div class="yrcnt">
                  <!-- Default Year Option Radio Buttons -->
                  <label class="tyr">
                    <div>
                      <input type="radio" name="yearOption" value="single" id="singleYearOption" 
                      <%= product && product.yearOption === 'single' ? 'checked' : '' %>>
                      <span>Single Year</span>
                    </div>
                  </label>
                  <label class="tyr">
                    <div>
                      <input type="radio" name="yearOption" value="interval" id="intervalYearOption" 
                      <%= product && product.yearOption === 'interval' ? 'checked' : '' %>>
                      <span>Year Interval</span>
                    </div>
                  </label>
                </div>
              
                <!-- Single Year Div -->
                <div id="singleYearDiv" style="display: <%= product && product.yearOption === 'single' ? 'block' : 'none' %>;">
                  <select id="year" name="year">
                    <option disabled selected value="" class="style">Select Year</option>
                    <% for (let year = currentYear; year >= startYear; year--) { %>
                      <option value="<%= year %>" <%= product && year === product.year ? 'selected' : '' %>><%= year %></option>
                    <% } %>
                  </select>
                </div>
              
                <!-- Interval Year Div -->
                <div id="intervalYearDiv" style="display: <%= product && product.yearOption === 'interval' ? 'block' : 'none' %>;">
                  <select id="startYear" name="startYear">
                    <option disabled selected value="" class="style">Start Year</option>
                    <% for (let year = currentYear; year >= startYear; year--) { %>
                      <option value="<%= year %>" <%= product && year === product.startYear ? 'selected' : '' %>><%= year %></option>
                    <% } %>
                  </select>
                  <select id="endYear" name="endYear">
                    <option disabled selected value="" class="style">End Year</option>
                    <% for (let year = currentYear; year >= startYear; year--) { %>
                      <option value="<%= year %>" <%= product && year === product.endYear ? 'selected' : '' %>><%= year %></option>
                    <% } %>
                  </select>
                </div>
              </fieldset>
              
            
            




