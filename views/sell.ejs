                <option value="Nigerian Used" <%= product && product.condition === 'Nigerian Used' ? 'selected' : '' %>>Nigerian Used</option>
                <option value="Tokunbo" <%= product && product.condition === 'Tokunbo' ? 'selected' : '' %>>Foreign Used</option>
              </select>

              <fieldset>
                <legend>Price</legend>
                <div id="amnt">
                    <span class="one">&#8358</span><span class="two"><input type="number" name="price" required value="<%= product ? product.price : '' %>"></span>
                </div>
              </fieldset>

              <fieldset>
                <legend>Name</legend>
                <input type="text" id="userName" name="userName" value="<%= user.lastname %> <%= user.firstname %>" readonly>
              </fieldset>

              <fieldset>
                  <legend>Business Name</legend>
                  <input type="text" id="bizname" name="bizname" value="<%= user.bizname || '' %>" readonly>
              </fieldset>

              <fieldset>
                <legend>Whatsapp</legend>
                  <input type="tel" name="whatsapp">
              </fieldset>
              <fieldset>
                <legend>Phone</legend>
                <input type="tel" required name="telephone">
              </fieldset>

              <select name="location" id="lct" required>
                    <option disabled selected value="Location">Location</option>
                    <option value="Agege" <%= product && product.location === 'Agege' ? 'selected' : '' %>>Agege</option>
                    <option value="Ajeromi-Ifelodun" <%= product && product.location === 'Ajeromi-Ifelodun' ? 'selected' : '' %>>Ajeromi-Ifelodun</option>
                    <option value="Alimosho" <%= product && product.location === 'Alimosho' ? 'selected' : '' %>>Alimosho</option>
                    <option value="Amuwo-Odofin" <%= product && product.location === 'Amuwo-Odofin' ? 'selected' : '' %>>Amuwo-Odofin</option>
                    <option value="Apapa" <%= product && product.location === 'Apapa' ? 'selected' : '' %>>Apapa</option>
                    <option value="Badagry" <%= product && product.location === 'Badagry' ? 'selected' : '' %>>Badagry</option>
                    <option value="Epe" <%= product && product.location === 'Epe' ? 'selected' : '' %>>Epe</option>
                    <option value="Eti-Osa" <%= product && product.location === 'Eti-Osa' ? 'selected' : '' %>>Eti-Osa</option>
                    <option value="Ibeju-Lekki" <%= product && product.location === 'Ibeju-Lekki' ? 'selected' : '' %>>Ibeju-Lekki</option>
                    <option value="Ifako-Ijaiye" <%= product && product.location === 'Ifako-Ijaiye' ? 'selected' : '' %>>Ifako-Ijaiye</option>
                    <option value="Ikeja" <%= product && product.location === 'Ikeja' ? 'selected' : '' %>>Ikeja</option>
                    <option value="Ikorodu" <%= product && product.location === 'Ikorodu' ? 'selected' : '' %>>Ikorodu</option>
                    <option value="Kosofe" <%= product && product.location === 'Kosofe' ? 'selected' : '' %>>Kosofe</option>
                    <option value="Lagos Island" <%= product && product.location === 'Lagos Island' ? 'selected' : '' %>>Lagos Island</option>
                    <option value="Lagos Mainland" <%= product && product.location === 'Lagos Mainland' ? 'selected' : '' %>>Lagos Mainland</option>
                    <option value="Mushin" <%= product && product.location === 'Mushin' ? 'selected' : '' %>>Mushin</option>
                    <option value="Ojo" <%= product && product.location === 'Ojo' ? 'selected' : '' %>>Ojo</option>
                    <option value="Oshodi-Isolo" <%= product && product.location === 'Oshodi-Isolo' ? 'selected' : '' %>>Oshodi-Isolo</option>
