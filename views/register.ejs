<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Register</title>

    <link rel="stylesheet" href="/css_folder/register_page.css">
    <link rel="icon" href="/public/icon_images/Logo_2 - Copy.png" type="image/x-icon" sizes="32x32" >

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" 
       integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA==" 
       crossorigin="anonymous" referrerpolicy="no-referrer" />
</head>
<body>
  <header>
    <div class="top">
      <div class="logo">
        <a href="/landing">
          <img src="/public/icon_images/Logo_2.png" alt="eas logo" width="250px" height="37px">
        </a>
      </div>
  </header>

  <main>
    <section class="main">
      <h2>Sign Up</h2>
      <form action="/register" method="post" id="signInForm" class="info">
        <input required type="text" name="firstname" id="firstname" placeholder="Firstname">
        <input required type="text" name="lastname" id="lastname" placeholder="Lastname">
        <input required type="email" name="email" id="email" placeholder="Email">
        <p class="notice">
          <svg xmlns="http://www.w3.org/2000/svg" height="24px" viewBox="0 -960 960 960" width="24px" fill="#EA3323" style="position: relative; top: 7px"><path d="M480-280q17 0 28.5-11.5T520-320q0-17-11.5-28.5T480-360q-17 0-28.5 11.5T440-320q0 17 11.5 28.5T480-280Zm-40-160h80v-240h-80v240ZM330-120 120-330v-300l210-210h300l210 210v300L630-120H330Zm34-80h232l164-164v-232L596-760H364L200-596v232l164 164Zm116-280Z"/></svg>
          If you do not intend to sell on <span class="eas">E-AUTOPARTSTORE</span>, you can leave the business name field empty.
        </p>
        <input  type="text" name="bizname" id="lastname" placeholder="Business Name">
        
        <% if (typeof emailError !== 'undefined') { %>
          <p class="error"><i class="fa-solid fa-triangle-exclamation"></i><%= emailError %>!</p>
        <% } %>


        <div class="wrap" id="wrap1">
          <input required type="password" name="password1" id="password1" placeholder="Create Password">
          <i class="fa-solid fa-eye" id="eye1"></i>
        </div>

        <div class="wrap" id="wrap2">
          <input required type="password" name="password2" id="password2" placeholder="Confirm Password">
          <i class="fa-solid fa-eye" id="eye2"></i>
        </div>

        <div id="unmatch">
          <i class="fa-solid fa-triangle-exclamation"></i> Password do not match
        </div>

        <div class="pvp">
          <p id="terms">
            <input type="checkbox" style="width: 15px;" required>
            <span class="sent">
              I accept the&nbsp; 
              <a href="/terms-and-conditions" style="white-space: nowrap;">terms and conditions</a>&nbsp;of use and
              <a href="/privacy-policies" style="white-space: nowrap;">privacy policy</a>
            </span>
          </p>
        </div>
        <button type="submit" class="sign_in">Sign Up</button>

        <div id="error-msg"></div>
      </form>
      <p class="outside">Already have an account?<a href="/login">Login</a>.</p>
    </section>
  </main>



<script>

  
  document.addEventListener("DOMContentLoaded", function() {
      const togglePassword = document.getElementById('eye1');
      const passwordField = document.getElementById('password1');
      
      togglePassword.addEventListener('click', function() {
          const type = passwordField.getAttribute('type') === 'password' ? 'text' : 'password';
          passwordField.setAttribute('type', type);
          togglePassword.classList.toggle('fa-eye');
          togglePassword.classList.toggle('fa-eye-slash');
      });
  });

  document.addEventListener("DOMContentLoaded", function() {
      const togglePassword = document.getElementById('eye2');
      const passwordField = document.getElementById('password2');
      
      togglePassword.addEventListener('click', function() {
          const type = passwordField.getAttribute('type') === 'password' ? 'text' : 'password';
          passwordField.setAttribute('type', type);
          togglePassword.classList.toggle('fa-eye');
          togglePassword.classList.toggle('fa-eye-slash');
      });
  });




  document.addEventListener("DOMContentLoaded", function() {
    const passwordField = document.getElementById('password1');
    
    passwordField.addEventListener('input', function() {
        const password = passwordField.value;

        const containsNumber = /\d/.test(password);
        const containsLetter = /[a-zA-Z]/.test(password);
        const isLongEnough = password.length >= 8;

        if (containsNumber && containsLetter && isLongEnough) {
            // Password meets all criteria
            passwordField.setCustomValidity('');
        } else {
            // Password doesn't meet all criteria
            passwordField.setCustomValidity('Password must contain at least one number, one letter, and be at least 8 characters long.');
        }
    });
});




document.addEventListener("DOMContentLoaded", function() {
  const unmatchDiv = document.getElementById('unmatch');
  
  document.getElementById("signInForm").addEventListener("submit", function(event) {
    let password1 = document.getElementById("password1").value;
    let password2 = document.getElementById("password2").value;

    if (password1 !== password2) {
      unmatchDiv.style.display = 'block'; // Show the div
      event.preventDefault(); // Prevent form submission
    } else {
      unmatchDiv.style.display = 'none'; // Hide the div if passwords match
    }
  });
});



</script>

</body>
</html>
