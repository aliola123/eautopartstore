              </div>
              <div class="vvm">
                <div class="label">brand</div>
                <div class="content"><%= product.brand %></div>
              </div>
              <div class="vvm">
                <div class="label">Model</div>
                <div class="content"><%= product.model %></div>
              </div>
              <div class="vvm">
                <div class="label">Condition</div>
