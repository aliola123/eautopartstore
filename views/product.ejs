              </div>
              <div class="vvm">
                <div class="label">Price</div>
                <div class="content">
                  <div class="priceDiv"><%= product.price %></div>
                </div>
              </div>
              <div id="liquid" class="vvm">
                    <div class="label1"><i class="fa-solid fa-location-dot"></i></div>
                    <div class="content1"><%= product.location %></div>
              </div>
          </div>


